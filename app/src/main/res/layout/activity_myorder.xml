<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_myorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.gangjianwang.www.gangjianwang.OrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_myorder_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_press">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@mipmap/back_black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_myorder_realorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/realorder_shape"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_myorder_realorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x3"
                    android:text="实物订单"
                    android:textSize="@dimen/x15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_myorder_virtualorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/virtualorder_shape"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_myorder_virtualorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x3"
                    android:text="虚拟订单"
                    android:textSize="@dimen/x15" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x1"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <EditText
            android:id="@+id/et_myorder_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:hint="输入商品标题或订单号进行搜索"
            android:padding="@dimen/x5"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/x15" />

        <RelativeLayout
            android:id="@+id/rl_order_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/selector_press"
            android:clickable="true"
            android:padding="@dimen/x5">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:scaleType="fitXY"
                android:src="@mipmap/search_b" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_myorder_sit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x1"
        android:background="@android:color/white"
        android:orientation="vertical" />

</LinearLayout>
