<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x5">

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/x20"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/tv_item_firstpage3_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="优质精选*值得信赖"
            android:textSize="@dimen/x10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x5">

        <ImageView
            android:id="@+id/iv_item_firstpage3_imgurl1"
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <ImageView
            android:id="@+id/iv_item_firstpage3_imgurl2"
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <ImageView
            android:id="@+id/iv_item_firstpage3_imgurl3"
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x5">

        <ImageView
            android:id="@+id/iv_item_firstpage3_imgurl4"
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <ImageView
            android:id="@+id/iv_item_firstpage3_imgurl5"
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <ImageView
            android:id="@+id/iv_item_firstpage3_imgurl6"
            android:layout_width="0dp"
            android:layout_height="@dimen/x60"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_item_firstpage3_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x5"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:padding="@dimen/x5"
        android:text="查看更多"
        android:textSize="@dimen/x12" />

</LinearLayout>