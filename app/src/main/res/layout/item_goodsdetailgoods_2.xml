<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_goodsdetailgoods_othergoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:text="其他规格商品"
        android:textSize="@dimen/x15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x5">

        <ImageView
            android:id="@+id/iv_item_goodsdetailgoods_2_icon"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x70"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_goodsdetailgoods_2_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x10" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_goodsdetailgoods_2_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x12"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/tv_item_goodsdetailgoods_2_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:background="@drawable/size_thick_shape"
                    android:padding="@dimen/x2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15">

                <TextView
                    android:id="@+id/tv_item_goodsdetailgoods_2_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/x13" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x10"
                    android:background="@drawable/add_shopcar_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5"
                        android:text="加入购物车"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>