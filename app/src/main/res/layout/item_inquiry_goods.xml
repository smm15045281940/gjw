<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_inquiry_goods_goods_image"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_item_inquiry_goods_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:layout_toRightOf="@+id/iv_item_inquiry_goods_goods_image"
            android:textSize="@dimen/x12" />

        <LinearLayout
            android:id="@+id/ll_item_inquiry_goods_goods_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¥"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_item_inquiry_goods_goods_pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_item_inquiry_goods_goods_pay_price"
            android:layout_marginTop="@dimen/x2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x" />

            <TextView
                android:id="@+id/tv_item_inquiry_goods_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>