<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_balance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gangjianwang.www.gangjianwang.AccountBalanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/whitegray_selector"
            android:clickable="true"
            android:id="@+id/rl_accountbalance_back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:text="预存款账户"
                android:id="@+id/tv_accountbalance_title"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/whitegray_selector"
            android:clickable="true"
            android:id="@+id/rl_accountbalance_option">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="right"
                android:textColor="@android:color/white"
                android:text="预存款余额"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="right"
                android:textColor="@android:color/white"
                android:text="0.00"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="账户余额"
                android:id="@+id/tv_accountbalance"/>
            <View
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/tv_accountbalance"
                android:background="@android:color/holo_red_light"
                android:id="@+id/v_accountbalance"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="充值明细"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:id="@+id/tv_rechargedetail"/>

            <View
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/tv_rechargedetail"
                android:background="@android:color/holo_red_light"
                android:id="@+id/v_rechargedetail"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="余额提现"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:id="@+id/tv_accountcash"/>

            <View
                android:visibility="invisible"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/tv_accountcash"
                android:background="@android:color/holo_red_light"
                android:id="@+id/v_accountcash"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_accountbalance_sit">

    </LinearLayout>

</LinearLayout>
