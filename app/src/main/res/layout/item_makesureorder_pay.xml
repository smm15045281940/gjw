<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitegray_selector"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/iv_item_makesureorder_pay_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_item_makesureorder_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_item_makesureorder_pay_icon"
            android:text="支付方式:"
            android:textSize="@dimen/x15" />

        <ImageView
            android:id="@+id/iv_item_makesureorder_pay_more"
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/x10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:scaleType="fitXY"
            android:src="@mipmap/more_black" />

        <TextView
            android:id="@+id/tv_item_makesureorder_pay_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_toLeftOf="@+id/iv_item_makesureorder_pay_more"
            android:text="货到付款"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x12" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#F5F5F5" />

</LinearLayout>