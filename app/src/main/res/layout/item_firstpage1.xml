<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x5">

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/x20"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:text="商品推荐"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_firstpage1_imgurl1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default" />

            <TextView
                android:id="@+id/tv_item_firstpage1_goodsName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="goodsName" />

            <TextView
                android:id="@+id/tv_item_firstpage1_goodsPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="goodsPrice"
                android:textColor="@android:color/holo_red_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_firstpage1_imgurl2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default" />

            <TextView
                android:id="@+id/tv_item_firstpage1_goodsName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="goodsName" />

            <TextView
                android:id="@+id/tv_item_firstpage1_goodsPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="goodsPrice"
                android:textColor="@android:color/holo_red_light" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>