<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_shopfirstpage_listview_shophostrecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:text="店主推荐"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/x10">

            <ImageView
                android:id="@+id/iv_item_shopfirstpage_listview_goodsicon1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_item_shopfirstpage_listview_goodsname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="goodsName"
                android:textSize="@dimen/x12" />

            <TextView
                android:id="@+id/tv_item_shopfirstpage_listview_goodsprice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="goodsPrice"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/x10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_shopfirstpage_listview_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/x10">

            <ImageView
                android:id="@+id/iv_item_shopfirstpage_listview_goodsicon2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_item_shopfirstpage_listview_goodsname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="goodsName" />

            <TextView
                android:id="@+id/tv_item_shopfirstpage_listview_goodsprice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="goodsPrice"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/x10" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>