<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x160"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_contractcompany_grid_imgurl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_item_contractcompany_grid_companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="companyName"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/tv_item_contractcompany_grid_companyDuty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="companyDuty"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/tv_item_contractcompany_grid_companyAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="companyAddress" />

    </LinearLayout>

</LinearLayout>