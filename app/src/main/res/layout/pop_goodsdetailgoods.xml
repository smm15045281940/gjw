<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pop_goodsdetailgoods_close"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="right"
                android:layout_margin="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@mipmap/pop_close" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10">

                <ImageView
                    android:id="@+id/iv_pop_goodsdetailgoods_icon"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x40"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_pop_goodsdetailgoods_goodsname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@+id/iv_pop_goodsdetailgoods_icon"
                    android:text="圆管 32 0.55"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_pop_goodsdetailgoods_icon"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@+id/iv_pop_goodsdetailgoods_icon"
                    android:text="¥25.50"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_pop_goodsdetailgoods_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x10"
                    android:text="库存：998件"
                    android:textSize="@dimen/x10" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:text="规格:"
                android:textSize="@dimen/x12" />

            <customview.FlowLayout
                android:id="@+id/fl_pop_goodsdetailgoods_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10">

            </customview.FlowLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:text="厚度:"
                android:textSize="@dimen/x12" />

            <customview.FlowLayout
                android:id="@+id/fl_pop_goodsdetailgoods_thick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10">

            </customview.FlowLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="购买数量"
                    android:textSize="@dimen/x12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pop_goodsdetailgoods_buyamount_shape"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pop_goodsdetailgoods_buyamount_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5"
                        android:text="－"
                        android:textSize="@dimen/x15" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_pop_goodsdetailgoods_buyamount_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5"
                        android:layout_marginLeft="@dimen/x8"
                        android:layout_marginRight="@dimen/x8"
                        android:layout_marginTop="@dimen/x5"
                        android:inputType="number"
                        android:text="1"
                        android:textSize="@dimen/x15" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_pop_goodsdetailgoods_buyamount_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5"
                        android:text="＋"
                        android:textSize="@dimen/x15" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_pop_goodsdetailgoods_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_alignParentBottom="true"
                android:background="@drawable/goodsdetailgoods_bottom_shape"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_pop_goodsdetailgoods_customservice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/x5"
                        android:layout_marginTop="@dimen/x5"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/x1"
                            android:text="客服"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/x10" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:id="@+id/rl_pop_goodsdetailgoods_shopcar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/x5"
                        android:layout_marginTop="@dimen/x5"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/x1"
                            android:text="购物车"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/x10" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pop_goodsdetailgoods_buynow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ED5564"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="立即购买"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pop_goodsdetailgoods_addshopcar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FB6E52"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:text="加入购物车"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/x13" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pop_goodsdetailgoods_icon_before"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x50"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

</LinearLayout>