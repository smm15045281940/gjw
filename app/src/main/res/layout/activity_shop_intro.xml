<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context="com.gangjianwang.www.gangjianwang.ShopIntroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#F5F5F5">

        <RelativeLayout
            android:id="@+id/rl_shopintro_back"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:background="@drawable/default_gray_selector"
            android:clickable="true"
            android:padding="@dimen/x10">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/back_black" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="店铺介绍"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x18" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shopintro_shopicon"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:layout_margin="@dimen/x10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_toRightOf="@+id/iv_shopintro_shopicon"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="金坤成不锈钢金属装饰有限公司"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/x13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x2"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="类型：不锈钢系列"
                        android:textSize="@dimen/x10" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x2"
                        android:background="@drawable/shape_shopintro_rl_normal"
                        android:padding="@dimen/x3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="普通店铺"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/x10" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x60"
                    android:layout_marginTop="@dimen/x10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_shopintro_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_shopintro_rl_collect"
                            android:clickable="true"
                            android:padding="@dimen/x5">

                            <TextView
                                android:id="@+id/tv_shopintro_collect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收藏"
                                android:textSize="@dimen/x12" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_shopintro_fan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/x5"
                            android:text="2粉丝"
                            android:textSize="@dimen/x10" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@android:color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述相符"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="5.0"
                        android:textColor="#ED5564"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="与同行业持平 --"
                        android:textColor="#ED5564"
                        android:textSize="@dimen/x12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务态度"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="5.0"
                        android:textColor="#ED5564"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="与同行业持平 --"
                        android:textColor="#ED5564"
                        android:textSize="@dimen/x12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物流服务"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="5.0"
                        android:textColor="#ED5564"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="与同行业持平 --"
                        android:textColor="#ED5564"
                        android:textSize="@dimen/x12" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="公司名称"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="哈尔滨金坤成不锈钢金属装饰有限公司"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/x12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="所在地"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="黑龙江 哈尔滨市 道外区"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/x12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="开店时间"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="2016-08-12"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/x12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="主营商品"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="201#304#白钢管材，板材，地簧，拉手工剪板，折弯，刨槽，激光切割"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/x12" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
