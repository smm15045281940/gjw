<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.gangjianwang.www.gangjianwang.ClassifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_classify_back"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:background="@drawable/selector_press"
            android:padding="@dimen/x10">

            <ImageView
                android:id="@+id/iv_classify_back"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/back_black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/search_shape">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="false"
                android:hint="钢材"
                android:singleLine="true"
                android:textSize="@dimen/x15" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_classify_left"
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <ListView
            android:id="@+id/lv_classify_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" />

    </LinearLayout>

</LinearLayout>
