<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default"
            android:id="@+id/iv_item_contractcompany_list_imgurl"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_item_contractcompany_list_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="companyName"
                android:textSize="@dimen/x15"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_item_contractcompany_list_companyDuty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="companyDuty"
                android:layout_centerVertical="true"
                android:textColor="@android:color/holo_red_light"/>
            <TextView
                android:id="@+id/tv_item_contractcompany_list_companyAddress"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="companyAddress"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>