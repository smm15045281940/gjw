<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ll_username"
            android:layout_marginTop="@dimen/x10">

            <TextView
                style="@style/tv_username"
                android:text="用  户  名" />

            <EditText
                android:id="@+id/et_register_common_username"
                style="@style/et_input"
                android:hint="请输入6-20个字符"
                android:maxLength="10" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_username"
            android:layout_marginTop="@dimen/x1">

            <TextView
                style="@style/tv_username"
                android:text="设置密码" />

            <EditText
                android:id="@+id/et_register_common_setpwd"
                style="@style/et_input"
                android:hint="请输入6-20位密码"
                android:inputType="textPassword"
                android:maxLength="20" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_username"
            android:layout_marginTop="@dimen/x1">

            <TextView
                style="@style/tv_username"
                android:text="确认密码" />

            <EditText
                android:id="@+id/et_register_common_surepwd"
                style="@style/et_input"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLength="20" />

        </LinearLayout>

        <LinearLayout
            style="@style/ll_username"
            android:layout_marginTop="@dimen/x1">

            <TextView
                style="@style/tv_username"
                android:text="邮        箱" />

            <EditText
                android:id="@+id/et_register_common_email"
                style="@style/et_input"
                android:hint="[选填]请输入常用邮箱地址"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x1"
            android:orientation="horizontal"
            android:padding="@dimen/x10">

            <CheckBox
                android:id="@+id/cb_register_common_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="同意"
                android:textSize="@dimen/x12" />

            <TextView
                android:id="@+id/tv_register_common_agreement"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="用户注册协议"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/x12" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_register_common_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/x5"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/addreceiveaddress_selector"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:text="注册"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x15" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>