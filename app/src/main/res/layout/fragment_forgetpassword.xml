<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout style="@style/ll_username">

            <TextView
                style="@style/tv_username"
                android:text="手 机 号" />

            <EditText
                android:id="@+id/et_forgetpassword_phonenumber"
                style="@style/et_input"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_username"
            android:layout_marginTop="@dimen/x1">

            <TextView
                style="@style/tv_username"
                android:layout_gravity="center_vertical"
                android:text="验 证 码" />

            <EditText
                android:id="@+id/et_forgetpassword_securitycode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="4"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x15" />

            <Button
                android:id="@+id/btn_gettestcode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_button_login"
                android:padding="5dp"
                android:text="获取验证码"
                android:textSize="@dimen/x10" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_username"
            android:layout_marginTop="@dimen/x1">

            <TextView
                style="@style/tv_username"
                android:text="新 密 码" />

            <EditText
                android:id="@+id/et_forgetpassword_newpwd"
                style="@style/et_input"
                android:hint="请输入新密码" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_username"
            android:layout_marginTop="@dimen/x1">

            <TextView
                style="@style/tv_username"
                android:text="确认密码" />

            <EditText
                android:id="@+id/et_forgetpassword_surenewpwd"
                style="@style/et_input"
                android:hint="请再次输入新密码" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_forgetpassword_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10"
            android:background="@drawable/shape_button_login"
            android:text="确定"
            android:textSize="@dimen/x12" />

    </LinearLayout>

</ScrollView>