<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/iv_item_sure_order_goods_image"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <TextView
            android:id="@+id/tv_item_sure_order_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:text="dfsdfdf"
            android:layout_toRightOf="@+id/iv_item_sure_order_goods_image"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_item_sure_order_goods_spec"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_item_sure_order_goods_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dfsfdfsf"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_sure_order_goods_image"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_item_sure_order_goods_image"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/tv_item_sure_order_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_sure_order_goods_image"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_sure_order_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>