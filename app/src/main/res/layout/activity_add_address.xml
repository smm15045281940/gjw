<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.gangjianwang.www.gangjianwang.AddAddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_addaddress_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_press"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_margin="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@mipmap/back_black" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_addaddress_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_press"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_margin="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@mipmap/save" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_addaddress_title"
            style="@style/tv_title" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x65"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="收货人姓名"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x12" />

        <EditText
            android:id="@+id/et_addaddress_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x1"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x65"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="联系手机"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x12" />

        <EditText
            android:id="@+id/et_addaddress_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x1"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x65"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="地区选择"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@+id/tv_addaddress_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x1"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x65"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="详细地址"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x12" />

        <EditText
            android:id="@+id/et_addaddress_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x1"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x65"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="默认地址"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x12" />

        <Switch
            android:id="@+id/sh_addaddress_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:checked="false" />

    </LinearLayout>

</LinearLayout>
