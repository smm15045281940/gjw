<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context="com.gangjianwang.www.gangjianwang.FeedbackActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_feedback_back"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:background="@drawable/default_gray_selector"
            android:clickable="true"
            android:padding="@dimen/x10">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/back_black" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户反馈"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_feedback_problem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/x10"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="start"
        android:hint="请描述一下您遇到的问题" />

    <Button
        android:id="@+id/btn_feedback_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:background="@android:color/holo_red_light"
        android:text="提交"
        android:textColor="@android:color/white" />


</LinearLayout>
