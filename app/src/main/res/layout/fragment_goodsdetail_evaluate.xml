<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_goodsdetailevaluate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="horizontal"
            android:padding="@dimen/x10">

            <RelativeLayout
                android:id="@+id/rl_goodsdetailevaluate_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rl_goodsdetailevaluate_shape"
                android:clickable="true"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部评价"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/x12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goodsdetailevaluate_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:background="@drawable/rl_goodsdetailevaluate_shape"
                android:clickable="true"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/x12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goodsdetailevaluate_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:background="@drawable/rl_goodsdetailevaluate_shape"
                android:clickable="true"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中评"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/x12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goodsdetailevaluate_poor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:background="@drawable/rl_goodsdetailevaluate_shape"
                android:clickable="true"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="差评"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/x12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goodsdetailevaluate_orderphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:background="@drawable/rl_goodsdetailevaluate_shape"
                android:clickable="true"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单晒图"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/x12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goodsdetailevaluate_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:background="@drawable/rl_goodsdetailevaluate_shape"
                android:clickable="true"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="追加评价"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/x12" />

            </RelativeLayout>

        </LinearLayout>

        <customview.MyRefreshListView
            android:id="@+id/mlv_goodsdetailevaluate"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_goodsdetailevaluate_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="正在加载..."
        android:visibility="invisible" />

</RelativeLayout>