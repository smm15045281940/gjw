<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prepaid_phone_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gangjianwang.www.gangjianwang.PrepaidPhoneCardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">

        <RelativeLayout
            android:id="@+id/rl_prepaidcard_back"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:background="@drawable/default_gray_selector"
            android:clickable="true"
            android:padding="@dimen/x10">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:scaleType="fitXY"
                android:src="@mipmap/back_black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_prepaidcard_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/realorder_shape"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_prepaidcard_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x3"
                    android:text="充值卡余额"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_prepaidcard_paycash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/virtualorder_shape"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_prepaidcard_paycash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x3"
                    android:text="充值卡充值"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_prepaidcard_sit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>
