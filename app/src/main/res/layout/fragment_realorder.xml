<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_realorder_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_gray_selector"
            android:orientation="vertical"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/tv_realorder_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="全部"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/x12" />

            <View
                android:id="@+id/v_realorder_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@android:color/holo_red_light" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_realorder_wait_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_gray_selector"
            android:orientation="vertical"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/tv_realorder_wait_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="待付款"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x12" />

            <View
                android:id="@+id/v_realorder_wait_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@android:color/holo_red_light"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_realorder_wait_receive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_gray_selector"
            android:orientation="vertical"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/tv_realorder_wait_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="待收货"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x12" />

            <View
                android:id="@+id/v_realorder_wait_receive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@android:color/holo_red_light"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_realorder_wait_self"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_gray_selector"
            android:orientation="vertical"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/tv_realorder_wait_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="待自提"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x12" />

            <View
                android:id="@+id/v_realorder_wait_self"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@android:color/holo_red_light"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_realorder_wait_evaluate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_gray_selector"
            android:orientation="vertical"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/tv_realorder_wait_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="待评价"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x12" />

            <View
                android:id="@+id/v_realorder_wait_evaluate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@android:color/holo_red_light"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_realorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />

</LinearLayout>