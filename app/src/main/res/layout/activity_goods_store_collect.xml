<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods_store_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context="com.gangjianwang.www.gangjianwang.CollectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_collect_back"
            android:layout_width="@dimen/x40"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_press">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_margin="@dimen/x10"
                android:src="@mipmap/back_black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_goodsstorecollect_goodscollect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/realorder_shape"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_goodsstorecollect_goodscollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x3"
                    android:text="商品收藏"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goodsstorecollect_shopcollect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/virtualorder_shape"
                android:clickable="true">

                <TextView
                    android:id="@+id/tv_goodstorecollect_storecollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/x3"
                    android:text="店铺收藏"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/ll_goodsshopcollect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>
