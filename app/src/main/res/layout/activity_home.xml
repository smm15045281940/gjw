<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gangjianwang.www.gangjianwang.HomeActivity">

    <LinearLayout
        android:id="@+id/ll_home_sit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_home_firstpage"
            style="@style/style_rl_home">

            <LinearLayout style="@style/style_ll_home">

                <ImageView
                    android:id="@+id/iv_home_firstpage"
                    style="@style/style_iv_home"
                    android:src="@mipmap/firstpage_default" />

                <TextView
                    android:id="@+id/tv_home_firstpage"
                    style="@style/style_tv_home"
                    android:text="首页" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_purchase"
            style="@style/style_rl_home">

            <LinearLayout style="@style/style_ll_home">

                <ImageView
                    android:id="@+id/iv_home_purchase"
                    style="@style/style_iv_home"
                    android:src="@mipmap/purchase_default" />

                <TextView
                    android:id="@+id/tv_home_purchase"
                    style="@style/style_tv_home"
                    android:text="采购单" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_calculate"
            style="@style/style_rl_home"
            android:background="#FF6207">

            <LinearLayout style="@style/style_ll_home">

                <ImageView
                    style="@style/style_iv_home"
                    android:src="@mipmap/calculate_bottom" />

                <TextView
                    style="@style/style_tv_home"
                    android:text="用量计算"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_shopcar"
            style="@style/style_rl_home">

            <LinearLayout style="@style/style_ll_home">

                <ImageView
                    android:id="@+id/iv_home_shopcar"
                    style="@style/style_iv_home"
                    android:src="@mipmap/shopcar_default" />

                <TextView
                    android:id="@+id/tv_home_shopcar"
                    style="@style/style_tv_home"
                    android:text="购物车" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_me"
            style="@style/style_rl_home">

            <LinearLayout style="@style/style_ll_home">

                <ImageView
                    android:id="@+id/iv_home_me"
                    style="@style/style_iv_home"
                    android:src="@mipmap/mine_default" />

                <TextView
                    android:id="@+id/tv_home_me"
                    style="@style/style_tv_home"
                    android:text="我的" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
