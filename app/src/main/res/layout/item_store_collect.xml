<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitegray_selector"
        android:clickable="true"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/iv_item_store_collect_img"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <TextView
            android:id="@+id/tv_item_store_collect_storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_item_store_collect_img"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_store_collect_img"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_item_store_collect_img"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝："
                android:textSize="@dimen/x10" />

            <TextView
                android:id="@+id/tv_item_store_collect_storeCollect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人    商品："
                android:textSize="@dimen/x10" />

            <TextView
                android:id="@+id/tv_item_store_collect_goodsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"
                android:textSize="@dimen/x10" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_store_collect_delete"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/del_b" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#F5F5F5" />

</LinearLayout>