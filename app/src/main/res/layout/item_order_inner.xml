<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/iv_item_order_inner_goods_image_url"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <TextView
            android:id="@+id/tv_item_order_inner_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_item_order_inner_goods_image_url"
            android:text="goods_name" />

        <TextView
            android:id="@+id/tv_item_order_inner_goods_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_order_inner_goods_image_url"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/iv_item_order_inner_goods_image_url"
            android:text="goods_spec" />

        <TextView
            android:id="@+id/tv_item_order_inner_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="goods_price" />

        <TextView
            android:id="@+id/tv_item_order_inner_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_order_inner_goods_image_url"
            android:layout_alignParentRight="true"
            android:text="goods_num" />

    </RelativeLayout>

</LinearLayout>