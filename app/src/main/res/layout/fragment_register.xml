<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/press_true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_register_common"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_register_common"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_default" />

                <TextView
                    android:id="@+id/tv_register_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="普通注册"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x15" />

            </LinearLayout>

            <View
                android:id="@+id/v_register_common"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_red_light" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_register_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_register_phone"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_default" />

                <TextView
                    android:id="@+id/tv_register_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="手机注册"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x15" />

            </LinearLayout>

            <View
                android:id="@+id/v_register_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_red_light" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_register_sit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>