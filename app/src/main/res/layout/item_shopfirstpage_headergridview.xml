<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/x10">

        <TextView
            android:id="@+id/tv_item_shopfirstpage_headergridview_shophostrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店主推荐"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x15" />

        <ImageView
            android:id="@+id/iv_item_shopfirstpage_headergridview_goodsicon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="@dimen/x5"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_item_shopfirstpage_headergridview_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text="goodsName"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@+id/tv_item_shopfirstpage_headergridview_goodsprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text="goodsPrice"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/x10" />

    </LinearLayout>

</LinearLayout>